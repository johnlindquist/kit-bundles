{
  "name": "@johnlindquist/kit-internal",
  "author": "John Lindquist (https://johnlindquist.com)",
  "license": "ISC",
  "version": "0.0.0-development",
  "publishConfig": {
    "access": "public"
  },
  "description": "Shaving off npm install size of Kit",
  "type": "module",
  "main": "./dist/index.js",
  "source": "./src/index.ts",
  "types": "./types/index.d.ts",
  "files": [
    "dist/*",
    "types/*"
  ],
  "scripts": {
    "test": "ava",
    "build-bundle": "node ./build-rollup.js",
    "build-types": "dts-bundle-generator --config ./dts-config.cjs",
    "build": "concurrently npm:build-*"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-typescript": "^8.3.0",
    "concurrently": "^6.3.0",
    "date-fns": "^2.25.0",
    "dts-bundle-generator": "^5.9.0",
    "esbuild": "^0.13.8",
    "rollup": "^2.58.0",
    "rollup-plugin-dts": "^4.0.0",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "rxjs": "^7.4.0",
    "semantic-release": "^18.0.0",
    "semantic-release-plugin-update-version-in-files": "^1.1.0",
    "typescript": "^4.4.4"
  },
  "release": {
    "branches": [
      "+([0-9]).x",
      "main",
      "next",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm"
    ]
  }
}
